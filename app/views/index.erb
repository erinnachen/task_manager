<div class = "col-md-6 col-md-offset-3 text-center ">
<h1> All Tasks </h1>
</div>

<div class = "col-md-6 col-md-offset-3 white tasks">
    <% @tasks.each_with_index do |task, ind| %>
      <div class = "row">
      <div class = "col-md-8">
        <h3><%= ind+1 %>: <a href="/tasks/<%= task.id %>"><%= task.title %></a></h3>
      </div>
      <div class = "col-md-2">
        <a class="btn btn-primary" href="/tasks/<%= task.id %>/edit" role="button">Edit</a>
      </div>

      <div class = "col-md-2">
        <form action="/tasks/<%=task.id%>" method = "POST">
          <input type="hidden" name='_method' value='delete'>
          <button type="submit" class="btn btn-danger">Delete</button>
        </form>
      </div>
      </div>
    <% end %>
    <% if @tasks.empty? %>
      <div class = "show">
      </div>
    <% end %>
    <br>
</div>

<div class = "col-md-6 col-md-offset-3 text-right">
<a href="/"><h3>Home</h3></a>
</div>
